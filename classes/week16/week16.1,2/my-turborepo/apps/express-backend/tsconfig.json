{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "lib": ["ES2015"],
        "module": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src", // Ensures TS compiles files from "src"
        "declaration": true, // Generates .d.ts files
        "declarationDir": "./dist/types", // Prevents .d.ts files from overwriting
        "noEmit": false // Ensures files are emitted
    },
    "exclude": ["node_modules"],
    "include": ["."]
}
